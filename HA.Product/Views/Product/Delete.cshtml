@model HA.Product.Models.Item

@{
    ViewBag.Title = "Xóa sản phẩm";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 text-danger">Xóa sản phẩm</h2>

    <div class="alert alert-warning">
        <strong>Bạn có chắc muốn xóa sản phẩm này không?</strong>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Tên sản phẩm</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Mô tả</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Giá</dt>
        <dd class="col-sm-9 fw-bold text-danger">@Model.Price.ToString("N0") VNĐ</dd>

        <dt class="col-sm-3">Hình ảnh</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.urlImage))
            {
                <img src="@Model.urlImage" alt="@Model.Name" style="width:150px;height:150px;object-fit:cover;" />
            }
            else
            {
                <span class="text-muted">Không có hình ảnh</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ID" />

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            <button type="submit" class="btn btn-danger">Xóa</button>
        </div>
    </form>
</div>
